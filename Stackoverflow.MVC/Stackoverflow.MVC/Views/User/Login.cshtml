
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="gap"></div>
<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form action="hede" role="form">
                <fieldset>
                    <h2>Giriş Yap</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <input type="text" name="username" id="username" class="form-control input-lg" placeholder="Kullanıcı Adı">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Şifre">
                    </div>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="button" id="btnGiris" class="btn btn-lg btn-success btn-block" value="Giriş">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a href="/User/AddUser" id="kayıt-location" class="btn btn-lg btn-primary btn-block">Kayıt</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script>
    $("#btnGiris").click(function () {
        $.post("http://localhost:60023/api/user/login", { UserName: $("#username").val(), Password: $("#password").val() }, function (data, status) {
            if (data.Status == true) {
                alert("Başarılı");


                localStorage.setItem('userToken', data.Token);
                location.href = '/Soru/ListQuestion';
            }


        });
    });
</script>



